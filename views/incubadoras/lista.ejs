

<%- include('../headerLayout.ejs')%>

    <div class="container">
       
<p> <a href="/incubadoras/cadastro"> Adicionar Nova Incubadora</a> </p>           
<div class="row">
    <!-- Aqui é feito o loop e vai listando as incubadoras 
    esse tipo de loop é um for especial, se tiver 10 incubadoras ele gira 10 vezes automatimente-->
    <% for(data of incubadoras){ %>

        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Incubadora</h4>      
                    <p class="card-text">                 
                      
                        <label>Código:</label>
                        <b><%= data.codIncubadora %></b>
                        <br />

                        <label>Status:</label>
                        <% if(data.status == 1){%>
                            <b>Em uso</b>
                            <br />

                             <label>Identificação Recém Nascido:</label>
                            12345
                            <br />
                            <label>Nome Recém Nascido:</label>
                        <%} else{%>
                            <b>vazia</b>
                        <%}%>

                    </p>
                </div>
                <div class="card-footer">
                    <form action="/incubadoras/details/<%= data.idIncubadora %>" method="GET">
                        <button type="submit" class="btn btn-info">Verificar</button>
                    </form>
                   
                </div>
                
            </div>
        </div>


    <% } %>
</div>

 
            
    </div>
    
<%- include('../footerLayout.ejs')%>
